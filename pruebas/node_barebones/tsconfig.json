{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}